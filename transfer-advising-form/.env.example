# App Configuration
NODE_ENV=development
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Transfer Advising Form

# Database
DATABASE_URL=postgresql://app:change_me@localhost:5432/transfer_advising?schema=public

# Authentication (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production-min-32-chars

# Admin Seed (for initial admin user)
ADMIN_SEED_EMAIL=admin@example.com
ADMIN_SEED_PASSWORD=ChangeMe123!

# SMTP Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=admissions@abroadinst.com
SMTP_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW=600000
RATE_LIMIT_MAX=20
IP_HASH_SECRET=your-ip-hash-secret-change-this

# Logging
LOG_LEVEL=info
